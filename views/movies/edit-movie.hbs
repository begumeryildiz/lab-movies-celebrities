<h2>Edit the movie: {{title}}</h2>

<form action="/movies/{{_id}}/edit" method="POST">
  <label> Title:
    <input type="text" name="title" value="{{title}}" />
  </label>

  <label> Genre:
    <input type="text" name="genre" value="{{genre}}" />
  </label>

  <label> Plot:
    <input type="text" name="plot" value="{{plot}}" />
  </label>

  <label> Cast:
        <select name="cast" multiple>

            {{#each this.cast}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </label>

  <button>Save changes</button>
</form>